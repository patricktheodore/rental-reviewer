<div class="row text-center">
    <div class="col-12 text-center">
        <h2 id="welcome">Hi {{name}}!</h2>
    </div>
</div>

<div class="row justify-content-center">
  <div class="col-sm-12 col-md-10 text-center">
    <h3>Add New Property:</h3>
    <form class="form new-property-form">
      <div class="form-group">
        <label for="property-address" id="property-address-label">Address:</label>
        <input class="form-input" type="text" id="property-address" name="property-address" />
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>
</div>

<div class="row">
    <div class="row mt-4">
        {{#if reviews.length}}
        <div class="col-12 post-list">
            <h3 id="recent-posts">Your Recent Reviews:</h3>
            {{#each reviews as |review|}}
            <div class="col-12 recent-post-card">
                <div class="card">
                    <div class="card-header">
                        <h4><a href="/api/property/{{review.property_id}}">{{review.property.address}}</a></h4>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title"><a href="/api/reviews/edit/{{review.id}}">{{review.title}}</a> -
                            {{review.rating}}/5</h5>
                        <h6 class="card-subtitle mb-2 text-muted">Reviewed: {{format_date
                            review.created_at}}</h6>
                        <p class="card-text">{{review.description}}</p>
                    </div>
                </div>
            </div>
            <div class="col-12 text-center">
                <button class="btn btn-sm btn-danger" id="delBtn" data-id="{{review.id}}">DELETE</button>
            </div>
        </div>
        {{/each}}
    </div>
    {{/if}}
</div>



<script src="/js/dashboard.js"></script>
<script src="/js/add-property.js"></script>