<div class="col-sm-12 col-md-10 proeprty-card">
  <div class="card">
    <div class="card-header">
      <h1>{{address}}</h1>
    </div>
  </div>
</div>

  {{#if reviews.length}}
  <div class="col-sm-10 col-md-8 review-list">
    <h3 id="review-header">Reviews:</h3>

    {{#each reviews as |review|}}
    <div class="col-10 post-card">
      <div class="card">
        <div class="card-header">
          <h2><a href="/review/{{review.id}}">{{review.title}}</a> - Rating: {{review.rating}}/5</h2><span><a href="/user/{{review.user_id}}">{{review.user.name}}</a> - {{format_date review.created_at}}</span>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}

  <a href="/review/{{review.id}}">{{review.title}}</a>