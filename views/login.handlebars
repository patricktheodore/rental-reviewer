<div class="row justify-content-md-center">
  <div class="col-sm-12 col-md-8 col-lg-4 text-center">
    <form class="form login-form">
      <div class="form-group col-12">
        <input class="form-input col-12" type="text" id="email-login" placeholder="Email address" />
      </div>
      <div class="form-group">
        <input class="form-input col-12" type="password" id="password-login" placeholder="Password"/>
      </div>
      <div class="form-group">
        <button class="btn btn-primary col-12" type="submit">Login</button>
      </div>
    </form>
  </div>
</div>

<div class="row justify-content-md-center">
  <div class="col-sm-12 col-md-8 col-lg-4 text-center">
    <h4 id="dont-prompt">Don't Have an Account?</h4>

    <form class="form signup-form">
      <div class="form-group">
        <input class="form-input col-12" type="text" id="name-signup" placeholder="Username"/>
      </div>
      <div class="form-group">
        <input class="form-input col-12" type="text" id="email-signup" placeholder="Email Address"/>
      </div>
      <div class="form-group">
        <input class="form-input col-12" type="password" id="password-signup" placeholder="Password"/>
      </div>
      <div class="form-group">
        <button class="btn btn-primary col-12" id="signup-btn" type="submit">Sign Up!</button>
      </div>
    </form>
  </div>
</div>
</div>  

<script src="/js/login.js"></script>