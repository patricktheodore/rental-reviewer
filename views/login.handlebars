<div class="row justify-content-center">
  <div class="col-sm-12 col-md-8 col-lg-4 text-center">
    <h2 class="auth-title">Login</h2>

    <form class="form login-form">
      <div class="form-group">
        <label for="email-login" id="email-login-label">email:</label>
        <input class="form-input" type="text" id="email-login" />
      </div>
      <div class="form-group">
        <label for="password-login" id="password-login-label">password:</label>
        <input class="form-input" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">login</button>
      </div>
    </form>
  </div>
</div>
  
<div class="row justify-content-center">
  <div class="col-sm-12 col-md-8 col-lg-4 text-center">
    <h4 id="dont-prompt">Don't have an account?</h4>
    <h2 class="auth-title">Signup</h2>

    <form class="form signup-form">
      <div class="form-group">
        <label for="name-signup" id="name-signup-label">name:</label>
        <input class="form-input" type="text" id="name-signup" />
      </div>
      <div class="form-group">
        <label for="email-signup" id="email-signup-label">email:</label>
        <input class="form-input" type="text" id="email-signup" />
      </div>
      <div class="form-group">
        <label for="password-signup" id="password-signup-label">password:</label>
        <input class="form-input" type="password" id="password-signup" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">signup</button>
      </div>
    </form>
  </div>
</div>
</div>  

<script src="/js/login.js"></script>